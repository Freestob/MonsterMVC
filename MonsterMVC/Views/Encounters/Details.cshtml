@model MonsterMVC.Domain.Data.Encounter

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Encounter</h4>
    <hr />
    <dl class="dl-horizontal">
    </dl>
</div>
<table>
    @foreach (var item in Model.ActiveMonsters)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Monster.Name)
